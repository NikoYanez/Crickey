<p id="notice"><%= notice %></p>

<h1>Shoes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Sale start</th>
      <th>Sale end</th>
      <th>Slug</th>
      <th>Special</th>
      <th>Keyword</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.name %></td>
        <td><%= shoe.price %></td>
        <td><%= shoe.quantity %></td>
        <td><%= shoe.sale_start %></td>
        <td><%= shoe.sale_end %></td>
        <td><%= shoe.slug %></td>
        <td><%= shoe.special %></td>
        <td><%= shoe.keyword %></td>
        <td><%= link_to 'Show', shoe %></td>
        <td><%= link_to 'Edit', edit_shoe_path(shoe) %></td>
        <td><%= link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

